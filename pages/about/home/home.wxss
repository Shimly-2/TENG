.scrollPage .mytext{
  display: flex;    /*设置显示样式**/
  align-items: center;    /**子view垂直居中*/
  font-size: 20px;
  color: black;
  /* color: #0081ff; */
  font-family: 'Courier New', Courier, monospace;
  /* margin-left: 125px; */
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  text-shadow: 5px 5px 6px #c7c8c9e7;
  font-weight:700;
}

.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}